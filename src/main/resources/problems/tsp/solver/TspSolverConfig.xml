<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <solutionClass>problems.tsp.domain.TspSolution</solutionClass>
    <entityClass>problems.tsp.domain.Assignment</entityClass>
    <!--<entityClass>problems.tsp.domain.Location</entityClass>-->



    <scoreDirectorFactory>
        <easyScoreCalculatorClass>problems.tsp.score.EasyCalculator</easyScoreCalculatorClass>
    </scoreDirectorFactory>

    <!--Note construction heuristic don't necessarily create feasible solutions-->
    <constructionHeuristic>FIRST_FIT_DECREASING</constructionHeuristic>
    <localSearch>HILL_CLIMBING</localSearch>
    <termination>
        <secondsSpentLimit>10</secondsSpentLimit>
    </termination>
</solver>